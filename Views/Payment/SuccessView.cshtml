@{
    ViewBag.Title = "PaymentWithPaypal";
}




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Success</title>
</head>
<body>
    <div>
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="error-template">
                        <h1>
                            Good
                        </h1>

                        <div class="error-details">
                            Payment has successfully done!
                        </div>
                        <div class="error-actions">
                            @if (User.IsInRole("Baristas"))
                            {
                                using (Html.BeginForm("AddOrderBarista", "Barista", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    <input type="submit" class="btn btn-default btn-lg" value="Take Me Home" /><span class="glyphicon glyphicon-home"></span>
                                }

                            }
                            else
                            {
                                using (Html.BeginForm("AddOrder", "Shopping", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    <input type="submit" class="btn btn-default btn-lg" value="Take Me Home" /><span class="glyphicon glyphicon-home"></span>

                                }
                            }
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<style>
    body {
        background-image: url(data:image/png;base64,);
    }

    .error-template {
        padding: 40px 15px;
        text-align: center;
    }

    .error-actions {
        margin-top: 15px;
        margin-bottom: 15px;
    }

        .error-actions .btn {
            margin-right: 10px;
        }
</style>